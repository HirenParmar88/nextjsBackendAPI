generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String    @unique
  password  String    
  jwtToken  String    @unique
  role      Role    @default(user)
  products  product[] //  one to Many
}

enum Role {
  user
  admin
}

model product{
  id  Int @id @default(autoincrement())
  product_name  String
  price Float
  description String?
  userId  Int //Fk to user
  user user @relation(fields: [userId], references: [id])
  accessories accessory[]  @relation("ProductAccessories") // One-to-many relationship with named relation
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model accessory{
  id  String  @id @default(uuid())
  name  String
  productId Int //fk to product
  product   product @relation(fields: [productId],references: [id],name: "ProductAccessories")  //FK
  createdAt DateTime  @default(now())
}

